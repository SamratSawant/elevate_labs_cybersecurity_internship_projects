{
    "database_path": "network_monitor.db",
    "interface": null,
    "email": {
        "enabled": false,
        "smtp_server": "smtp.gmail.com",
        "smtp_port": 587,
        "username": "your_email@gmail.com",
        "password": "your_app_password",
        "recipients": [
            "admin@company.com"
        ]
    },
    "thresholds": {
        "port_scan_threshold": 20,
        "flood_threshold": 100,
